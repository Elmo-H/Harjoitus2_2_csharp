<Page
    x:Class="Harjoitus2_2_csharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Harjoitus2_2_csharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <Border
            Width="300"
            Height="350"
            Background="Black"
            Margin="40"
            Name="rectangle1">
            <TextBlock
            Width="300"
            Height="350"
            PointerEntered="rectangle1_PointerEntered"
            PointerExited="rectangle1_PointerExited">
            </TextBlock>
        </Border>

        <Border
            Width="300"
            Height="350"
            Background="Orange"
            RelativePanel.AlignRightWithPanel="True"
            Margin="40"
            Name="rectangle2">
            <TextBlock
            Width="300"
            Height="350"
            PointerEntered="rectangle1_PointerEntered"
            PointerExited="rectangle1_PointerExited">
            </TextBlock>
        </Border>

    </RelativePanel>
</Page>
